<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro"  name="littlebot">

<!-- Included URDF XACRO Files -->
<!-- <xacro:include filename="$(find littlebot_description)/urdf/littlebot_wheel.urdf.xacro" /> -->
<!-- <xacro:include filename="$(find littlebot_description)/urdf/sonar.xacro" /> -->


  <!-- Modelagem base_link "link" -->
  <link name="base_link">
  </link>

  <!-- Modelagem chassis "link" and "joint"-->
  <!-- ========================================================================== -->
  <link name="chassis">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find littlebot_description)/meshes/littlebot.dae" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
	      <mesh filename="file://$(find littlebot_description)/meshes/chassis.dae" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.19357368"/>
      <inertia ixx="1.84569610e-4"  ixy="-4.09475462e-6"  ixz="-2.91063667e-5" iyy="7.65700035e-4" iyz="2.32776537e-8" izz="9.00861891e-4" />
    </inertial>
  </link>  

  <joint name="base_to_chassis" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
  </joint>

 <!-- Modelagem da IMU MPU-6050 "link" "joint" -->
 <!-- ========================================================================== -->
 <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="file://$(find littlebot_description)/meshes/MPU_6050.dae" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
	      <mesh filename="file://$(find littlebot_description)/meshes/MPU_6050.dae" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.00142672"/>
      <inertia ixx="4.54052487e-8"  ixy="1.07305074e-10"  ixz="-2.17782593e-10" iyy="2.70451174e-8" iyz="-4.58999382e-11" izz="7.14041804e-8" />
    </inertial>
  </link>  

  <joint name="chassis_to_imu" type="fixed">
    <parent link="chassis"/>
    <child link="imu_link"/>
    <origin xyz="0.028 0.0 0.005" rpy="0 0 0" />

  </joint>
  <!-- Left whell model "link" "joint" "transmission" "gazebo" -->
  <!-- ========================================================================== -->
	<link name="left_wheel">
		<visual>
			<origin xyz="0.0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="file://$(find littlebot_description)/meshes/roda.dae" />
			</geometry>
		</visual>
		<collision>
			<origin xyz="0.0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="file://$(find littlebot_description)/meshes/roda.dae" />
			</geometry>
		</collision>
		<inertial>
			<origin xyz="0.0 0 0" rpy="0 0 0"/>
			<mass value="0.041"/>
			<inertia ixx="2.967e-5"  ixy="-7.675e-15"  ixz="-4.765e-14" iyy="1.616e-5" iyz="-1.121e-16" izz="1.616e-5" />
    	</inertial>
	</link>

	<joint name="base_to_left_wheel" type="continuous">
		<parent link="chassis"/>
		<child link="left_wheel"/>
		<origin xyz="0.0281 0.067 -0.01425" rpy="0 0 0" />
		<axis xyz="0 1 0" rpy="0 0 0" />
	</joint>

	<gazebo reference="left_wheel">
      <mu1 value="1.0"/>
      <mu2 value="0.5"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <fdir1 value="1 0 0"/>
    </gazebo>

  <!-- Right wheel model "link" "joint" "transmission" "gazebo" -->
  <!-- ========================================================================== -->
	<link name="right_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 3.142"/>
			<geometry>
				<mesh filename="file://$(find littlebot_description)/meshes/roda.dae" />
			</geometry>
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 3.142"/>
			<geometry>
				<mesh filename="file://$(find littlebot_description)/meshes/roda.dae" />
			</geometry>
		</collision>
		<inertial>
			<origin xyz="0 0 0" rpy="0 0 3.142"/>
			<mass value="0.041"/>
			<inertia ixx="2.967e-5"  ixy="-7.675e-15"  ixz="-4.765e-14" iyy="1.616e-5" iyz="-1.121e-16" izz="1.616e-5" />
    	</inertial>
	</link>

	<joint name="base_to_right_wheel" type="continuous">
		<parent link="chassis"/>
		<child link="right_wheel"/>
		<origin xyz="0.0281 -0.067 -0.01425" rpy="0 0 0" />
		<axis xyz="0 1 0" rpy="0 0 0" />
	</joint>
   
  <gazebo reference="right_wheel">
    <mu1 value="1.0"/>
    <mu2 value="0.5"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <fdir1 value="1 0 0"/>
  </gazebo>


<!-- ============================================================================= -->
	<gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <parameters>$(find littlebot_control)/config/control.yaml</parameters>
    </plugin>
  </gazebo>

	<ros2_control name="littlebot_hardware" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="base_to_left_wheel">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>      
    <joint name="base_to_right_wheel">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
          <namespace>/</namespace>
          <remapping>~/out:=imu/data_raw</remapping>
        </ros>
        <initial_orientation_as_reference>false</initial_orientation_as_reference>
      </plugin>
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

</robot>
